<div class="container text-center">
  <div class="row">
    <h1>Mister Cocktail</h1>
    <br>
    <em><p>Find the cocktail to suit your mood.</p></em>
    <br>
    <% @cocktails.each do |cocktail| %>
      <h3> <%= link_to cocktail.name, cocktail_path(cocktail) %></h3>
    <% end %>
    <br>
    <br>
    <%= link_to "Add a new cocktail", new_cocktail_path, {class: "btn btn-primary"} %>
  </div>
</div>


