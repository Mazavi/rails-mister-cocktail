<div class="container text-center">
  <div class="row">
    <h1><%= @cocktail.name %></h1>
    <br>
      <% @cocktail.doses.each do |dose| %>
      <ul><%= dose.description %> of <%= dose.ingredient.name %><%= link_to dose_path(dose.id), method: :delete, data: { confirm: 'Are you sure?' } do %>
        <i class="fa fa-trash" aria-hidden="true"></i>
        <% end %>
      </ul>
    <% end %>
    <br>
    <h1><%= link_to "Add a dose to #{@cocktail.name}", new_cocktail_dose_path(@cocktail), { class: "btn btn-primary"}%></h1>
  <br>
    <h4><%= link_to "Back to Cocktails List", cocktails_path %></h4>
  </div>
</div>
