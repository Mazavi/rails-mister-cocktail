<h1 class="container text-center">Create a new dose</h1>
<div class="container">
<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.input :description %>
  <%= f.input :ingredient_id, collection: Ingredient.all %>
  <%= f.submit 'Submit your dose', class: 'btn btn-primary' %>
<% end %>
</div>
